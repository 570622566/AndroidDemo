<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <Button
            android:id="@+id/request_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请求定位权限"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/request_location_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="true"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <Button
            android:id="@+id/request_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请求Camera权限"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/request_camera_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="true"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <Button
            android:id="@+id/request_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请求Audio权限"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/request_audio_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="true"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <Button
            android:id="@+id/request_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请求Camera.Audio权限"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/request_record_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="true"/>

    </FrameLayout>

</LinearLayout>